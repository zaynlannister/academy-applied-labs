{{ 'section-list-collection.css' |  asset_url |  stylesheet_tag }}

<div class="list-collection">
    <div class="container">
        <span class="list-collection__title">{{ section.settings.title }}</span>
        <div class="list-collection__container">
            {% for product in section.settings.collection.products %}
                {% render 'product-card', product: product %}
            {% endfor %}
        </div>
        <div class="list-collection__button">
            <a href="{{ section.settings.collection.url }}">
                <button class="ordinary">Show more</button>
            </a>
        </div>
    </div>
</div>

{% schema %}
{
    "name": "List collection",
    "settings": [
        {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default": "Our products"
        },
        {
            "type": "collection",
            "id": "collection",
            "label": "Collection"
        }
    ]
}
{% endschema %}