<footer class="footer">
    <div class="container">
        <div class="footer-container">
            <div class="footer__info">
                <img src="{{ shop.brand.logo.image.url }}" alt="logo">
                <p class="footer__info-slogan poppins">{{ shop.brand.slogan }}</p>
                <div>...</div>
            </div>
            {% for link in linklists.footer.links %}
                {% if link.links != blank %}
                    <div class="footer__nav">
                        <p class="footer__nav-title">{{ link.title }}</p>
                        {% for sublink in link.links %}
                            <a class="footer__nav-sublink poppins" href="{{ sublink.url }}">{{ sublink.title }}</a>
                        {% endfor %}
                    </div>
                {% endif %}
                
            {% endfor %}
            <div class="footer__contact">
                <p class="footer__contact-title">{{ section.settings.contact_title }}</p>
                <p class="footer__contact-address">
                    {% render 'icon-location' %}
                    {{ shop.address.city }} , {{ shop.address.address1 }} , {{ shop.address.address2 }}
                </p>
                <p class="footer__contact-number">
                    {% render 'icon-phone' %}
                    {{ shop.phone }}
                </p>
                <p class="footer__contact-email">
                    {% render 'icon-email' %}
                    {{ shop.email }}
                </p>
            </div>
        </div>
    </div>
</footer>

{% schema %}
{
    "name": "Footer",
    "settings": [
        {
            "type": "text",
            "id": "contact_title",
            "label": "Contact Title",
            "default": "CONTACT US"
        }
    ]
}
{% endschema %}