{{ 'section-contact.css' |  asset_url |  stylesheet_tag }}

<div class="contact">
    <div class="contact-header">
        <div class="container">
            {% render 'breadcrumb', settings: section.settings %}
            <p class="contact-title">{{ section.settings.title }}</p>
        </div>
    </div>
    <div class="contact-info">
        <div class="container">
            <div class="contact-wrapper">
                <div class="contact-info__content">
                    <div class="contact-info__content-1">
                        <p class="contact-info__content-title">Miralou №1</p>
                        <p class="contact-info__content-item">
                            {% render 'icon-location' %}
                            {{ shop.address.city }} , {{ shop.address.address1 }} , {{ shop.address.address2 }}
                        </p>
                        <p class="contact-info__content-item">
                            {% render 'icon-phone' %}
                            {{ shop.phone }}
                        </p>
                        <p class="contact-info__content-item">
                            {% render 'icon-email' %}
                            {{ shop.email }}
                        </p>
                    </div>
                    
                    <div class="contact-info__content-2">
                        <p class="contact-info__content-title">Miralou №1</p>
                        <p class="contact-info__content-item">
                            {% render 'icon-location' %}
                            {{ section.settings.address }}
                        </p>
                        <p class="contact-info__content-item">
                            {% render 'icon-phone' %}
                            {{ section.settings.phone }}
                        </p>
                        <p class="contact-info__content-item">
                            {% render 'icon-email' %}
                            {{ section.settings.email }}
                        </p>
                    </div>

                    <div class="contact-info__content-3">
                        <a href="https://facebook.com/shopify" target="_blank">
                            {% render 'icon-facebook' %}
                        </a>
                        <a href="https://vimeo.com/shopify" target="_blank">
                            {% render 'icon-vimeo' %}
                        </a>
                        <a href="https://instagram.com/shopify" target="_blank">
                            {% render 'icon-instagram' %}
                        </a>
                        <a href="https://twitter.com/shopify" target="_blank">
                            {% render 'icon-twitter' %}
                        </a>
                    </div>
                </div>
                <div class="contact-info__location">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d635.7850726123296!2d-74.00878527718605!3d40.710959913675765!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89c24fa5d33f083b%3A0xc80b8f06e177fe62!2z0J3RjNGOLdCZ0L7RgNC6LCDQodCo0JA!5e0!3m2!1sru!2s!4v1715162775733!5m2!1sru!2s" width="100%" height="100%" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                </div>
            </div>
        </div>
    </div>
    <div class="contact-form">
        <div class="container">
            <div class="contact-form__wrapper">
                <div class="contact-form__text">
                    <p class="contact-form__text-title">{{  section.settings.form_title}}</p>
                    <div class="poppins">{{ section.settings.form_subtitle }}</div>
                </div>
                <div class="contact-form__container">
                    {% form 'contact' %}
                        <input class="contact-form__email" name="contact[name]" type="text" required placeholder="Enter name">
                        <input class="contact-form__name" name="contact[email]" type="email" required placeholder="Enter Email">
                        <textarea class="contact-form__body" name="contact[body]" placeholder="Your Question..."></textarea>
                        <button type="submit" class="ordinary">Submit</button>
                    {% endform %}
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .contact-header {
        background-image: url({{ section.settings.bg_image |  img_url: 'master' }});
    }
</style>

{% schema %}
{
    "name": "Contact us",
    "settings": [
        {
            "type": "text",
            "id": "title",
            "label": "Title"
        },
        {
            "type": "text",
            "id": "address",
            "label": "Address 2"
        },
        {
            "type": "text",
            "id": "phone",
            "label": "Phone 2"
        },
        {
            "type": "text",
            "id": "email",
            "label": "Email 2"
        },
        {
            "type": "text",
            "id": "form_title",
            "label": "Form title"
        },
        {
            "type": "richtext",
            "id": "form_subtitle",
            "label": "Form subtitle"
        },
        {
            "type": "image_picker",
            "id": "bg_image",
            "label": "Background Image"
        },
        {
            "type": "checkbox",
            "id": "show_breadcrumb_nav",
            "label": "Show breadcrumb navigation",
            "default": true
        },
        {
            "type": "select",
            "id": "breadcrumb_delimeter",
            "info": "The icon that is between every link in the breadcrumb",
            "label": "Breadcrumb Delimeter Icon",
            "options": [
            {
                "value": "angle_right",
                "label": "Angle Right"
            },
            {
                "value": "slash",
                "label": "Slash"
            }
            ],
            "default": "angle_right"
        },
        {
            "type": "color",
            "id": "breadcrumb_text_color",
            "label": "Breadcrumb Color",
            "default": "#465076"
        }    
    ]
}
{% endschema %}